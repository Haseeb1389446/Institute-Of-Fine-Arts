@model Microsoft.AspNetCore.Identity.IdentityUser;

<!-- Main Content Start -->
<main class="main-content">
    <section class="section">
        <div class="container">
            <h2>Edit User</h2>

            <form class="login-form" asp-controller="Home" asp-action="EditUser" method="POST">

                <div class="form-group">
                    <label for="email">Email Address:</label>
                    <input type="text" id="name" asp-for="UserName">
                </div>

                <div class="form-group">
                    <label for="email">Email Address:</label>
                    <input type="email" id="email" asp-for="Email">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn-submit">Update</button>
                </div>

            </form>

        </div>
    </section>
</main>
<!-- Main Content End -->