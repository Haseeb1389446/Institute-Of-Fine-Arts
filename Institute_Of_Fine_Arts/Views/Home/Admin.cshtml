@model List<Microsoft.AspNetCore.Identity.IdentityUser>;

<!-- Main Content Start -->
<main class="main-content">
    <section class="section">
        <div class="container">
            <h2>Welcome, Administrator!</h2>

            <!-- Manage Staff -->
            <div class="dashboard-section">
                <h3>Manage Staff</h3>
                <a class="btn-submit btn" asp-controller="Auth" asp-action="Register">Add New Staff Member</a>

                <table class="dashboard-table">
                    <thead>
                        <tr>
                            <th>Staff Name</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.staff != null && ViewBag.staff.Count > 0)
                        {
                            @foreach (var user in ViewBag.staff)
                        {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                <button class="btn-small"><a asp-controller="Home" asp-action="EditUser" asp-route-id="@user.Id">Edit</a></button>
                                <button class="btn-small btn-danger"><a asp-controller="Home" asp-action="DeleteUser" asp-route-id="@user.Id">Delete</a></button>
                            </td>
                        </tr>    
                        }   
                        }
                    </tbody>
                </table>
            </div>

            <!-- Manage Students -->
            <div class="dashboard-section">
                <h3>Manage Students</h3>
                <a class="btn-submit btn" asp-controller="Auth" asp-action="Register">Add New Student</a>

                <table class="dashboard-table">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.Students != null && ViewBag.Students.Count > 0)
                        {
                            @foreach (var user in ViewBag.Students)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>@user.Email</td>
                                    <td>
                                        <button class="btn-small"><a asp-controller="Home" asp-action="EditUser" asp-route-id="@user.Id">Edit</a></button>
                                        <button class="btn-small btn-danger"><a asp-controller="Home" asp-action="DeleteUser" asp-route-id="@user.Id">Delete</a></button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <!-- View Student Submissions -->
            <div class="dashboard-section">
                <h3>Student Submissions</h3>

                <table class="dashboard-table">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Painting</th>
                            <th>Competition</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Emma Watson</td>
                            <td>Sunset Dreams</td>
                            <td>Annual Art Gala 2025</td>
                            <td>Approved</td>
                        </tr>
                        <tr>
                            <td>John Doe</td>
                            <td>City Lights</td>
                            <td>Modern Expressionism Contest</td>
                            <td>Pending Review</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- View Staff Activity -->
            <div class="dashboard-section">
                <h3>Staff Activity</h3>

                <table class="dashboard-table">
                    <thead>
                        <tr>
                            <th>Staff Member</th>
                            <th>Activity</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Olivia Smith</td>
                            <td>Reviewed Painting: "Sunset Dreams"</td>
                            <td>April 24, 2025</td>
                        </tr>
                        <tr>
                            <td>Michael Johnson</td>
                            <td>Created Competition: "Modern Expressionism Contest"</td>
                            <td>April 20, 2025</td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </section>
</main>
<!-- Main Content End -->