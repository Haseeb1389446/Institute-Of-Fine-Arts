@{
}

@model List<Award>;

<!-- Main Awards Section -->
<section class="awards-container">
    <h2>Awards</h2>

    <!-- Award Categories -->
    <div class="award-categories">
        <h3>Award Categories</h3>
        <ul>
            @foreach (var award in Model)
            {
                <li>@award.AwardTitle</li>
            }
        </ul>
    </div>

    <!-- Past Winners -->
    <div class="past-winners">
        <h3>Past Award Winners</h3>

        <div class="winner-card">
            <h4>Annual Art Gala 2024</h4>
            <p><strong>Winner:</strong> Olivia Smith</p>
            <p><strong>Award:</strong> Best Abstract Art</p>
            <p><strong>Competition Date:</strong> March 15, 2024</p>
            <a href="#" class="view-btn">View Submission</a>
        </div>

        <div class="winner-card">
            <h4>Modern Expressionism Contest 2024</h4>
            <p><strong>Winner:</strong> John Doe</p>
            <p><strong>Award:</strong> Most Creative Painting</p>
            <p><strong>Competition Date:</strong> April 10, 2024</p>
            <a href="#" class="view-btn">View Submission</a>
        </div>

        <div class="winner-card">
            <h4>Spring Art Exhibition 2024</h4>
            <p><strong>Winner:</strong> Emily Johnson</p>
            <p><strong>Award:</strong> Best Digital Art</p>
            <p><strong>Competition Date:</strong> May 25, 2024</p>
            <a href="#" class="view-btn">View Submission</a>
        </div>

    </div>
</section>