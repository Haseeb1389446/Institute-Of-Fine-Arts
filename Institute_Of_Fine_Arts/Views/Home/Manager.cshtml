@{
}
<!-- Main Content Start -->
<main class="main-content">
    <section class="section">
        <div class="container">
            <h2>Welcome, Manager!</h2>

            <!-- Students List -->
            <div class="dashboard-section">
                <h3>Students List</h3>
                <table class="dashboard-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Enrolled Course</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.Students != null && ViewBag.Students.Count > 0)
                        {
                            @foreach (var user in ViewBag.Students)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>@user.Email</td>
                                    <td>Bachelor of Arts</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <!-- Staff List -->
            <div class="dashboard-section">
                <h3>Staff List</h3>
                <table class="dashboard-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Department</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.staff != null && ViewBag.staff.Count > 0)
                        {
                            @foreach (var user in ViewBag.staff)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>@user.Email</td>
                                    <td>Sculpture</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <!-- Competition History -->
            <div class="dashboard-section">
                <h3>Competition History</h3>
                <table class="dashboard-table">
                    <thead>
                        <tr>
                            <th>Competition</th>
                            <th>Date</th>
                            <th>Submissions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.competitions != null && ViewBag.competitions.Count > 0)
                        {
                            @foreach (var competitions in ViewBag.competitions)
                            {
                                <tr>
                                    <td>@competitions.Title</td>
                                    <td>@competitions.StartDate</td>
                                    <td>80</td>
                                </tr>
                            }
                        }
                        <tr>
                            <td>Modern Expressionism Contest</td>
                            <td>April 5, 2025</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Awards Issued -->
            <div class="dashboard-section">
                <h3>Awards Issued</h3>
                <table class="dashboard-table">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Award</th>
                            <th>Competition</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.awards != null && ViewBag.awards.Count > 0)
                        {
                            @foreach (var awards in ViewBag.awards)
                            {
                                <tr>
                                    <td>@awards.AwardTitle</td>
                                    <td>@awards.AwardedDate</td>
                                    <td>80</td>
                                </tr>
                            }
                        }
                        <tr>
                            <td>John Doe</td>
                            <td>Most Innovative Art</td>
                            <td>Modern Expressionism Contest</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Paintings Posted -->
            <div class="dashboard-section">
                <h3>Paintings Posted</h3>
                <table class="dashboard-table">
                    <thead>
                        <tr>
                            <th>Painting Name</th>
                            <th>Student</th>
                            <th>Staff Comments</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Sunset Dreams</td>
                            <td>Emma Watson</td>
                            <td>Excellent use of color gradients</td>
                        </tr>
                        <tr>
                            <td>City Lights</td>
                            <td>John Doe</td>
                            <td>Needs better composition</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Exhibited Paintings -->
            <div class="dashboard-section">
                <h3>Exhibited Paintings</h3>
                <table class="dashboard-table">
                    <thead>
                        <tr>
                            <th>Painting</th>
                            <th>Status</th>
                            <th>Buyer (if sold)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Ocean Breeze</td>
                            <td>Sold</td>
                            <td>Mr. Robert</td>
                        </tr>
                        <tr>
                            <td>Golden Horizon</td>
                            <td>Unsold</td>
                            <td>-</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Upcoming Exhibitions -->
            <div class="dashboard-section">
                <h3>Upcoming Exhibitions</h3>
                @if (ViewBag.upcoming != null && ViewBag.upcoming.Count > 0)
                {
                    @foreach (var exhibition in ViewBag.upcoming)
                    {
                        <ul class="upcoming-list">
                            <li>@exhibition.Title - @exhibition.ExhibitionDate</li>
                        </ul>
                    }
                }
            </div>

        </div>
    </section>
</main>
<!-- Main Content End -->